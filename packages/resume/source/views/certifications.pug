section.resume__section.resume__section--certifications
  h2 Certifications
  each item in certifications
    .listing__item
      header.listing__header
        .listing__row
          h3=item.title
          if item.date
            small #{item.date.month} #{item.date.year}
        small=item.issuer
        if item.description
          p=item.description
