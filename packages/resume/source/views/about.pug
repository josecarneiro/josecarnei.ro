- let about = data.about;
header.resume__section.resume__section--about
  h1 #{ about.first_name } #{ about.last_name }
  div
    span
      strong Born
      |  #{about.birth_date.month} #{about.birth_date.day}
      sub th
      | , #{about.birth_date.year}
    span
      strong Nationality
      |  #{about.nationality}
    span
      strong Address
      |  #{about.location.city},
      |  #{about.location.country}
    span
      strong Email
      |  #{about.contact.email}
    span
      strong Website
      |  #{about.contact.website}
    span
      strong LinkedIn
      |  #{about.contact.social.linkedin}
    span
      strong Github
      |  #{about.contact.social.github}
    