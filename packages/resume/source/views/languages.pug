- const languages = data.languages;
section.resume__section.resume__section--languages
  h2 Languages
  .grid
    .col
      strong Language
    .col
      strong Orality
    .col
      strong Comprehension
    .col
      strong Writing
  each language in languages
    .grid
      .col
        b=language.name
      if !language.native
        .col
          span=language.orality
        .col
          span=language.comprehension
        .col
          span=language.writing
      else
        .col.col--large
          span Native Speaker
      //- if (language.certifications)
      //-   each certification in language.certifications
      //-     .col
      //-       small (Certification)
      //-     .col.col--large.col--large--left
      //-       small
      //-         em Certification
      //-         span=certification.name
      //-         em Grade
      //-         span=certification.grade
      //-         em Date
      //-         span=certification.date.year
  - let hasCertifications = false;
  each language in languages
    if (language.certifications)
      - hasCertifications = true;
  if hasCertifications
    .grid
      .col
        strong Certifications
      .col--large
        each language in languages
          if (language.certifications)
            each certification in language.certifications
              small
                em Certification
                span=certification.name
                em Grade
                span=certification.grade
                em Date
                span=certification.date.year